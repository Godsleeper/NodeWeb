extend ../layout

block content
  .container
    .row 
      .col-md-5
        embed(src="#{movie.flash}",allowFullscreen="true",quality="high",width="550",height="400",align="middle",type="application/x-shockwave-flash")
      .col-md-7
        dl.dl-horizontal
          dt 电影名字
          dd= movie.title
          dt 导演
          dd= movie.doctor
          dt 国家
          dd= movie.country
          dt 演员
          dd= movie.language
          dt 上映年份
          dd= movie.year
          dt 简介
          dd= movie.summary
          