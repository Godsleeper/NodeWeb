extend ../layout

block content
  .container
    .row 
      form.form-horizontal(method="post",action="/admin/movie/new")
        input(type="hidden",name="movie[_id}",value="#{movie._id}")
        .form-group
          label.col-sm-2.control-label(for="inputTitle") 电影名字
          .col-sm-10
            input#inputTitle.form-control(text="text",name="movie[title]",value="#{movie.title}")
        .form-group
          label.col-sm-2.control-label(for="inputDoctor") 电影导演
          .col-sm-10
            input#inputDoctor.form-control(text="text",name="movie[doctor]",value="#{movie.doctor}")
        .form-group
          label.col-sm-2.control-label(for="inputCountry") 国家
          .col-sm-10
            input#inputCountry.form-control(text="text",name="movie[country]",value="#{movie.country}")
        .form-group
          label.col-sm-2.control-label(for="inputLanguage") 语种
          .col-sm-10
            input#inputLanguage.form-control(text="text",name="movie[language]",value="#{movie.language}")
        .form-group
          label.col-sm-2.control-label(for="inputPoster") 海报地址
          .col-sm-10
            input#inputPoster.form-control(text="text",name="movie[poster]",value="#{movie.poster}")
        .form-group
          label.col-sm-2.control-label(for="inputPoster") 片源地址
          .col-sm-10
            input#inputFlash.form-control(text="text",name="movie[flash]",value="#{movie.flash}")
        .form-group
          label.col-sm-2.control-label(for="inputYear") 上映年代
          .col-sm-10
            input#inputYear.form-control(text="text",name="movie[year]",value="#{movie.year}")
        .form-group
          label.col-sm-2.control-label(for="inputSummary") 电影简介
          .col-sm-10
            input#inputSummary.form-control(text="text",name="movie[summary]",value="#{movie.summary}")
        .form-group
          .col-sm-offset-2.col-sm-10
          button.btn.btn-default(type="submit") 录入
          